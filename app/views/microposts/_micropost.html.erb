<li class="<% if !micropost.mentions.blank? %><% if micropost.mentions.include? current_user.identity %>list-group-item list-group-item-warning<% end %> <% end %>" id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, "50"), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.formatted_content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>
